{
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "lib": ["es6", "dom"],
    "composite": true,
    "baseUrl": "./packages",
    "paths": {
      "@helpers/*": ["helpers*"],
      "@components/*": ["web-components/dist/web-components*"],
      "@widgets/*": ["react-components/stories/widgets*"]
    }
  },
  "exclude": ["node_modules", "**/*.spec.ts", "**/__tests__/**"]
}
